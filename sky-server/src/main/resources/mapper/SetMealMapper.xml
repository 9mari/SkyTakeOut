<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetMealMapper">

    <select id="getSetMealByDishIds" resultType="java.lang.Long">
        select id from setmeal_dish where dish_id in
        <foreach collection="ids" open="(" separator="," close=")" item="id">
            #{id}
        </foreach>
    </select>
    <select id="page" resultType="com.sky.vo.SetmealVO">
        select s.* ,c.name categoryName from setmeal s left join category c on c.id = s.category_id
    </select>
</mapper>